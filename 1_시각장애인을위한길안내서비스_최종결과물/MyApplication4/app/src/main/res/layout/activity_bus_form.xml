<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor">
    <!-->수정 완<!-->
    <ImageView
        android:id="@+id/busImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:elevation="5dp"
        android:src="@drawable/home_bus" />

    <EditText
        android:id="@+id/busName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/busImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_button"
        android:elevation="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="이름을 입력하세요"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/busage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/busName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_button"
        android:elevation="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="나이를 입력하세요"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/busSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/busage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_button"
        android:elevation="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="성별을 선택하세요"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp" />


    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/busSex"
        android:layout_marginLeft="110dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        >

        <RadioButton
            android:id="@+id/manBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="남성"
            android:buttonTint="@color/textColor"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />

        <RadioButton
            android:id="@+id/womanBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:buttonTint="@color/textColor"
            android:text="여성"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />
    </RadioGroup>

    <EditText
        android:id="@+id/busNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/busSex"
        android:layout_marginStart="10dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_button"
        android:elevation="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="버스 번호판을 입력하세요"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/busFormBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="18dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/main_button"
        android:elevation="5dp"
        android:ems="10"
        android:gravity="center"
        android:padding="15dp"
        android:text="제출"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor" />



</RelativeLayout>